<network>
  <name>{{ vm_libvirt_network }}</name>
  <forward mode='route'/>
  <bridge name='{{ vm_libvirt_network }}' stp='on' delay='0'/>
  <ip address='{{ vm_network_gateway }}' netmask='{{ vm_network_netmask }}'>
    <dhcp>
      <range start='{{ vm_network_dhcp_start }}' end='{{ vm_network_dhcp_end }}'/>
    </dhcp>
  </ip>
</network>
